package com.jacaranda;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping(path = "${controller.root}")
public class TestController {
	private Logger logs = LoggerFactory.getLogger(TestController.class);
	
	@RequestMapping(path = "/prueba", method = RequestMethod.GET)
	public String pruebaGet() {
		logs.info("Prueba ejercida");
		logs.warn("Prueba peligro");
		logs.error("Prueba mal");
		return "Prueba Correcta";
	}
	
	@GetMapping(path = "/test")
	public String pruebaGetMapping() {
		return "Test Correcta";
	}
	
	@RequestMapping(path = "/requestPost", method = RequestMethod.POST)
	public String pruebaPost() {
		return "RequestPost: Hola Mundo";
	}
	@PostMapping(path = "/postMapping")
	public String pruebaPostMapping() {
		return "PostMapping: Hola mundo";
	}
	
	@PostMapping(path = "/post1")
	public String postParam(@RequestParam String nombre) {
		return ("Hola "+nombre);
	}
	
	@PostMapping(path = "/post2/{nombre}")
	public String postVar(@PathVariable String nombre) {
		return ("Hola "+nombre);
	}
	
	@PostMapping(path = "/post3")
	public ResponseEntity<?> postParamResEnt(@RequestParam String nombre) {
		return ResponseEntity.ok("Hola "+nombre);
	}
}
